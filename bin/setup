#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

def ensure_file(filename:, template: )
  system "cp -n #{template} #{filename}"
end

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  puts "\n== Copying sample files =="
  ensure_file(filename: "./config/database.yml",
              template: "./config/database_example.yml")

  ensure_file(filename: "./config/secrets.yml",
              template: "./config/secrets_example.yml")

  ensure_file(filename: "./config/branding.yml",
              template: "./config/branding_example.yml")

  ensure_file(template: "./config/initializers/devise.rb.example",
              filename: "./config/initializers/devise.rb")

  ensure_file(template: "./config/initializers/recaptcha.rb.example",
              filename: "./config/initializers/recaptcha.rb")

  ensure_file(template: "./config/initializers/wicked_pdf.rb.example",
              filename: "./config/initializers/wicked_pdf.rb")

  puts "\n== Preparing database =="
  system "bin/rake db:setup"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Restarting application server =="
  system "touch tmp/restart.txt"
end

