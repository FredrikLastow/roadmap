<%# locals: { context, title, tooltip } %>
<% department =  department.nil? ? Department.new :  department %>
<%= form_for(department, url: create_or_update_department_path, method: :put, html: { id: 'new_department_form'}) do |f| %>
<%= f.hidden_field(:org_id, value: org.id) %>

  <div class="department">
    <div class="row">
      <div class="col-xs-12">
        <h3><%=_('Create a new school or department') %></h3>
        <div class="row">
              <div class="form-group col-xs-10">
                <%= f.label :name, _('Name'), class: "control-label", "aria-required": true %>
                <%= f.text_field :name, id: "department_name", class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="form-group col-xs-10">
                <%= f.label :code, _('Abbreviated name or code (optional)'), class: "control-label" %>
                <%= f.text_field :code, id: "department_code", class: "form-control" %>
              </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-8">
          <%= f.button(_('Save'), id:"save_new_department_button", class: "btn btn-primary") %>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div id="departments_table" class="col-md-12">
      <%= render partial: '/departments/index',
                 locals: {
                           departments: org.departments,
                           org: org
                         }
       %>
    </div>
  </div>
  
  